.calendario
    margin-top 30px
    .block-title
        color letra_azul
        border-bottom 1px solid letra_azul   
    .content
        background url("../images/calendario2.png") no-repeat center bottom transparent
        left: -10px;
        position: relative;
        top: 0;
        .view-header
            height: 66px;
            left: 0;
            padding-left: 26px;
            position: relative;
            top: 0;
            width: 90%;
            .date-nav
                min-height: 50px;
                padding-top: 5px;
                background url("../images/linea.png") no-repeat center bottom transparent
            .pager
                left: 0;
                position: absolute;
                top: 5px;
                width: 100%;
                border none
                .date-next
                .date-prev
                    background none
                    border none
            .date-heading
                h3
                    a
                        text-decoration none
        .view-content
            left: 0;
            padding-left: 15px;
            position: relative;
            top: -30px;
            width: 90%;
            tr
            th
            td
            td.empty
                background none
                border none
                color #fff  
            th.days
                text-align right
            td
                &.sat
                    &.mini
                        color letra_naranja
                


.eventos
    .block-title
        color letra_azul
        border-bottom 1px solid letra_azul   
     .content
