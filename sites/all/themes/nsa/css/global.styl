.slide 
    margin-top: 14px;
    .slideimage
        box-shadow: 2px 2px 4px #000000;
    .slide-item 
        .content 
            background: rgba(7, 4, 4, 0.62);
            height: 370px;
            padding: 87px 15px;
            position: absolute;
            right: 0;
            text-align: center;
            top: 0;
            width: 300px;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
    .views-slideshow-pager-fields 
        text-align: center;
        margin: 20px;
    .views-slideshow-pager-field-item 
        background url("../images/slide-gris.png") no-repeat center center transparent
        width: 16px;
        height: 20px;
        display: inline-block
        text-indent: -99999px;
        &:hover
        &.active
            background url("../images/slide-azul.png") no-repeat center center transparent
    .views-slideshow-controls-text
        position: absolute;
        top: 182px;
        left: 0;
        z-index: 999;
        width: 100%;
        span 
            display: inline-block;
            width: 38px;
            height: 37px;
            text-indent: -999999px;

    .views-slideshow-controls-text-previous
        background url("../images/icono-flecha_04.png") no-repeat center center transparent
        &:hover
            background-image:url("../images/icono-flechita-blanca_04.png")
    .views-slideshow-controls-text-next
        float: right;
        background url("../images/icono-flechita-transparencia_04.png") no-repeat center center transparent
        &:hover
            background-image:url("../images/icono-flechita-blanca-2_04.png")
    .views-slideshow-controls-text-pause
        display none




        
